<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="2">

    <Space
        android:layout_width="10dp"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/llRegionResultFeedback"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/up_arrow"
            android:contentDescription="@string/iv_upper_arrow" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

        <EditText
            android:id="@+id/etRegionResultFeedback"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_feedback_edit_text"
            android:digits="0123456789."
            android:gravity="center"
            android:hint="@string/txt_feedback_hint_mm"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/txtResultFeedback_middle"
            android:textSize="16dp"
            android:autofillHints="@string/txt_feedback_hint_mm" />

    </LinearLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="match_parent"
    />

</LinearLayout>
